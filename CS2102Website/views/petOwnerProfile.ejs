<!DOCTYPE html>
<html lang="en" dir="ltr">
<%- include('headerSignedIn.ejs') %>
<link rel="stylesheet" href="css/styles.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

<head>
  <meta charset="utf-8">
  <title></title>
</head>

<body>
  <div class="parent">
    <div class="mainTitle">
      <h1>Pet Owner's Profile</h1>
    </div>

    <div class="profileLogoandCreditCard">
      <div class="logoandCreditCard">
        <div class="profilePhoto">
          <img class="profileLogo" src="https://www.creativefabrica.com/wp-content/uploads/2018/03/Cat-Paw-Print.jpg" alt="">
        </div>
        
      </div>
    </div>

      <div class="petOwnerProfileUserDetails">
        <h4>Name</h4>
        <p><%= petOwnerProfile.name %></p>
        <h4>Email</h4>
        <p><%= petOwnerProfile.email %></p>
        <h4>Username</h4>
        <p><%= petOwnerProfile.username %></p>
        <h4>Contact Number</h4>
        <p><%= petOwnerProfile.contact_num %></p>
        <h4>Role</h4>
        <p>Pet Owner</p>
        <h4>Area</h4>
        <p><%= petOwnerProfile.area %></p>
      </div>
    </div>
    <div class="petOwnerPets">
      <div class="myPetProfile">
        <div class="petProfilePhoto">
          <img class="petphoto" src="images\photo-1548858565-461b87144b6a.jpg" alt="">
          <!-- REMEMBER TO CHANGE TO EJS PET PROFILE PHOTO -->
        </div>
        <div class="petDescription">
          <h6>Pet Name</h6>
          <p><%= petProfile.name %></p>
          <h6>Type</h6>
          <p><%= petProfile.ptype %></p>
          <h6>Special Requirements</h6>
          <p><%= petProfile.sp_req %></p>
        </div>
      </div>
    </div>
    <div class="filler"></div>
    <div class="filler"></div>
  </div>
</body>

</html>