<!DOCTYPE html>
<html lang="en" dir="ltr">
<%- include('headerSignedOut.ejs') %>
<link rel="stylesheet" href="css/styles.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


<body>
  <div class="parent">
    <div class="leftSection">

    </div>

    <div class="rightSection">
      <div class="mainTitle">
        <h1>Sign In</h1>
      </div>

      <div class="signInBox">
        <form class="signInForm" action="/signIn" method="post">
          <div class="form-group row">
            <label for="username" class="col-sm-2 col-form-label">Username</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="username" name="username" placeholder="Username" autocomplete="off" required>
            </div>
          </div>
          <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" id="inputPassword" name="inputPassword" placeholder="Password" autocomplete="off" required>
            </div>
          </div>
          <button type="submit" class="signInButtonText" name="button">
            Sign In
          </button>
        </form>
      </div>
    </div>
  </div>
</body>

</html>
