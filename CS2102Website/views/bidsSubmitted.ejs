<!DOCTYPE html>
<html lang="en" dir="ltr">
<%- include('headerSignedIn.ejs') %>
<link rel="stylesheet" href="css/styles.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


<body>
  <div class="parent">
      <div class="mainTitle">
        <h1>My Bids</h1>

      </div>

      <div class="bidsDivider">
        <div class="btn-group" role="group" aria-label="Basic example">
          <button type="button" class="btn btn-secondary" onclick="location.href = '/myBids'"><b>Bids Received</b></button>
          <button type="button" class="btn btn-secondary btn-lg active" onclick="location.href = '/bidsSubmitted'"><b>Bids Submitted</b></button>
        </div>
      </div>

    <% if (ctusername != null) { %>
          <div class="listOfBids">
            <div class="tableheading">
              <h4>Bids Submitted</h4>
            </div>
            <table class="table">
      <thead>
        <tr>
        <th scope="col">Username</th>
        <th scope="col">Date</th>
        <th scope="col">Bid Amount</th>
        <th scope="col">Status</th>
          <th scope="col"></th>
        </tr>
      </thead>
            <% for (var i = 0; i < bidArr.length; i++) { %>
              <tbody>
                <tr>
                  <td><%= bidArr[i].care_taker_username %></td>
                  <td><%= bidArr[i].s_date.toString().substring(0,15) %></td>
                  <td>$ <%= bidArr[i].price %></td>
                  <% if (bidArr[i].successful) { %>
                  <td>Successful</td>
                  <% } else { %>
                  <td>Pending</td>
                  <% } %>
                  <td class="noborderright">
                  <form action="/bidsSubmitted" method="POST">
                  <input id="ctusername" name="ctusername" value="<%= bidArr[i].care_taker_username %>" hidden/>
                  <input id="startDate" name="startDate" value="<%= bidArr[i].s_date %>" hidden/>
                  <input id="startTime" name="startTime" value="<%= bidArr[i].s_time %>" hidden/>
                  <input id="petName" name="petName" value="<%= bidArr[i].name %>" hidden/>
                  <input id="bid" name="bid" value="<%= bidArr[i].price %>" hidden/>
                  <input id="status" name="status" value="<%= bidArr[i].successful %>" hidden/>
                  <input id="endTime" name="endTime" value="<%= bidArr[i].e_time %>" hidden/>
                  <input id="payType" name="payType" value="<%= bidArr[i].pay_type %>" hidden/>
                  <input id="review" name="review" value="<%= bidArr[i].review %>" hidden/>
                  <input id="rating" name="rating" value="<%= bidArr[i].rating %>" hidden/>
                  <input id="svcType" name="svcType" value="<%= bidArr[i].svc_type %>" hidden/>
                  <input id="trfMethod" name="trfMethod" value="<%= bidArr[i].trf_mthd %>" hidden/>


                  <button type="submit" class="btn btn-outline-primary">View Bid</button>
                  </form>
                  </td>
                </tr>
              </tbody>
            <% } %>
                </table>
          </div>
     <% } else { %>
        <table class="table">
          <thead>
            <tr>
            <th scope="col">Username</th>
            <th scope="col">Date</th>
            <th scope="col">Bid Amount</th>
            <th scope="col">Status</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td> - </td>
              <td> - </td>
              <td> - </td>
              <td> - </td>
        </td>
            </tr>
          </tbody>
        </table>
     <% } %>

    <div class="filler">

    </div>
    <div class="filler">

    </div>
    </div>
</body>

</html>
