<!DOCTYPE html>
<html lang="en" dir="ltr">
<%- include('headerSignedIn.ejs') %>
<link rel="stylesheet" href="css/styles.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


<body>
  <div class="parent">
      <div class="mainTitle">
        <h1>My Bids</h1>

      </div>

      <div class="bidsDivider">
        <div class="btn-group" role="group" aria-label="Basic example">
          <button type="button" class="btn btn-secondary" onclick="location.href = '/myBids'"><b>Bids Received</b></button>
          <button type="button" class="btn btn-secondary btn-lg active" onclick="location.href = '/bidsSubmitted'"><b>Bids Submitted</b></button>
        </div>
      </div>

<% if (ctusername != null) { %>
      <div class="listOfBids">
        <div class="tableheading">
          <h4>Bids Submitted</h4>
        </div>
        <table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Username</th>
      <th scope="col">Date</th>
      <th scope="col">Bid Amount</th>
      <th scope="col"></th>

    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= name %></td>
      <td> <%= ctusername %></td>
      <td><%= startDate %></td>
      <td>$ <%= bid %></td>
      <td class="noborderright"><button type="button" class="btn btn-outline-primary" onclick="location.href = '/viewSubmittedBid'">View Bid</button>
</td>
    </tr>
  </tbody>
</table>
      </div>
 <% } else { %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Username</th>
      <th scope="col">Date</th>
      <th scope="col">Bid Amount</th>
      <th scope="col"></th>

    </tr>
  </thead>
  <tbody>
    <tr>
      <td> - </td>
      <td> - </td>
      <td> - </td>
      <td> - </td>
</td>
    </tr>
  </tbody>
</table>
 <% } %>

    <div class="filler">

    </div>
    <div class="filler">

    </div>
    </div>
</body>

</html>
