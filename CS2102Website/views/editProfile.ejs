<!DOCTYPE html>
<html lang="en" dir="ltr">
<%- include('headerSignedIn.ejs') %>
<link rel="stylesheet" href="css/styles.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

<head>
  <meta charset="utf-8">
  <title></title>
</head>

<body>
  <div class="parent">
    <div class="mainTitle">
      <h1>Your Profile</h1>
    </div>

    <div class="profileLogoandCreditCard">
      <div class="logoandCreditCard">
        <div class="profilePhoto">
          <img class="profileLogo" src="https://www.creativefabrica.com/wp-content/uploads/2018/03/Cat-Paw-Print.jpg" alt="">
        </div>
        <div class="changePhoto">
          <form class="md-form" action="/editProfile" method="post">
            <div class="file-field">
              <div class="btn btn-primary btn-sm float-left">
                <input type="file" value="newProfilePhoto">
              </div>
            </div>
          </form>
        </div>
      </div>


    </div>

    <div class="CreditCards">
      <div class="CreditCardHeading">
        <div class="CreditCardList">
          <div class="tableheading">
            <h4>Credit Cards</h4>
          </div>
          <div class="mostrecent3reviews">
            <% if (typeof cardDetails != 'undefined') { %>
            <% for(var i=0; i<cardDetails.length; i++) { %>
            <div class="form-check">
              <h6>
                <label class="form-check-label" for="cardName">
                  <%= cardDetails[i].card_no %>
                </label>
              </h6>
              <label class="form-check-label" for="cardName">
                <%= cardDetails[i].card_name %>
              </label>
              <hr>
            </div>
            <% } %>
            <% } %>
            <div class="BidButton">
              <button type="button" class="btn btn-outline-primary" onclick="location.href = '/updateCard'">Add Card</button>
            </div>

          </div>
        </div>
      </div>

      <div class="profileUserDetails"  method="post" >
        <form method="post">
          <div class="form-group">
            <label for="updateName">Name</label>
            <input type="text" class="form-control" id="updateName" name="updateName" aria-describedby="emailHelp">
          </div>
          <div class="form-group">
            <label for="updateEmail">Email</label>
            <input type="email" class="form-control" id="updateEmail" name="updateEmail" aria-describedby="emailHelp">
          </div>
          <div class="form-group">
            <label for="updateUsername">Username</label>
            <input type="text" class="form-control" id="updateUsername" name="updateUsername" aria-describedby="emailHelp">
          </div>
          <div class="form-group">
            <label for="updateContactNumber">Contact Number</label>
            <input type="text" class="form-control" id="updateContactNumber" name="updateContactNumber" aria-describedby="emailHelp">
          </div>
          <div class="form-group">
            <label for="updateArea">Area</label>
            <input type="text" class="form-control" id="updateArea" name="updateArea" aria-describedby="emailHelp">
          </div>
          <button type="submit" class="btn btn-primary" name= "button" >Submit</button>
        </form>
      </div>
    </div>

    <div class="myPets">
    <% if (petArr != null && petArr.length > 0 ) { %>
          <div class="myPetProfile">
            <div class="petProfilePhoto">
              <img class="petphoto" src="images\photo-1548858565-461b87144b6a.jpg" alt="">
              <!-- REMEMBER TO CHANGE TO EJS PET PROFILE PHOTO -->
            </div>
            <div class="petDescription">
                <div class="viewAllPetsButton">
                  <button type="button" class="btn btn-outline-primary" onclick="location.href = '/viewAllPets'">View all pets!</button>
                </div>
            </div>
          </div>
    <% } else { %>
      <div>
      </div>
    <% } %>
      <div class="addPets">
        <div class="addPetButton">
          <button type="button" class="btn btn-outline-primary" onclick="location.href = '/addPets'">Add a Pet!</button>
        </div>
      </div>
      <div class="errorBox">
        <% if(typeof alert != 'undefined') { %>
        <% alert.forEach(function(error) { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <%= error.msg %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <% }) %>
        <% } %>
      </div>
      <div class="errorBox">
        <% if(typeof taken != 'undefined') { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <%= taken %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <% } %>
      </div>
    </div>
    <div class="filler">
    </div>
    <div class="filler">
    </div>
    <div class="filler">
    </div>
    <div class="filler">
    </div>
  </div>
</body>

</html>
